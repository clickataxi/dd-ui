{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": false,
        "declaration": true
    },
    "exclude": [
        ".grunt",
        ".vscode",
        "coverage",
        "dist",
        "misc",
        "node_modules",
        "templates",
        "src/**/*.d.t"
    ]
}